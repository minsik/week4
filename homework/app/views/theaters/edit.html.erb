<h1>Editing Theater #<%= @theater.id %></h1>

<%= form_tag(theater_url(@theater.id), :method => :put) do %>

  <p><%= label_tag :name %>
    <%= text_field_tag :name, @theater.name %></p>

  <p><%= label_tag :address %>
    <%= text_field_tag :address, @theater.address %></p>

  <p><%= label_tag :phone_number %>
    <%= text_field_tag :phone_number, @theater.phone_number %></p>


  <p><%= submit_tag %></p>
<% end %>
